package stringReverse;

public class StringReversal {

	public static void main(String[] args) {
		String s="1001";
		int a=s.length();
		for(int i=a-1;i>=0 ;i--) {
		     char n1=s.charAt(i);
		     String  s1=s.substring(0,3);
		     String a1=s1+n1;
		     System.out.print(a1);
			// by using concat method
			
				
		}
		
		
	}

}
