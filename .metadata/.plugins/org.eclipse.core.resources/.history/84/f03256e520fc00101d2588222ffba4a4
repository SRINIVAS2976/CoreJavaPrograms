package com.example.Aggregation$Composition;
class Bike{
	private String brand;
	private float mileage;
	public Bike(String brand, float mileage) {
		super();
		this.brand = brand;
		this.mileage = mileage;
	}
	public String getBrand() {
		return brand;
	}
	public float getMileage() {
		return mileage;
	}
	
}
class Book{
	private String bookname;
	private String author;
	public Book(String bookname, String author) {
		super();
		this.bookname = bookname;
		this.author = author;
	}
	public String getbookName() {
		return bookname;
	}
	public String getAuthor() {
		return author;
	}	
}
class Heart{
	private float weight;
	private int bpm;
	public Heart(float weight, int bpm) {
		super();
		this.weight = weight;
		this.bpm = bpm;
	}
	public float getWeight() {
		return weight;
	}
	public int getBpm() {
		return bpm;
	}
	
}
class Brain{
	private float weight;
	private String colour;
	public Brain(float weight, String colour) {
		super();
		this.weight = weight;
		this.colour = colour;
	}
	public float getWeight() {
		return weight;
	}
	public String getColour() {
		return colour;
	}
}
class Student{
	// we r creating tightly bound object inside student as a real world logic ,heart and brain inside student thats why it is known as  composition.to // we r creating tightly bound object inside student as a real world logic ,heart and brain inside student only so its composition to main object
	Heart H=new Heart(2.5f,75);       // we need to give values as we call parameterized constructor so we must give values for that constructor before object creation
	Brain b=new Brain(1.4f,"grey matter");
	 // now write functions for aggregated (loosely bonded objects for bike and books)
	void hasA(Bike b){
		System.out.println(b.getBrand());
		System.out.println(b.getMileage());
	}
	void hasA(Book bo){
		System.out.println(bo.getAuthor());
		System.out.println(bo.getbookName());
	}
}

public class AggregationAndCompositionExample {

	public static void main(String[] args) {
		Student s=new Student();
		Bike b=new Bike("splendor",22.5f);
		Book bo=new Book("srini","the perfect crime");
		System.out.println(s.H.getWeight());
		System.out.println(s.H.getBpm());
		System.out.println(s.b.getWeight());
		System.out.println(s.b.getColour());
		s.hasA(b);
		s.hasA(bo);
		
		
	}

}
