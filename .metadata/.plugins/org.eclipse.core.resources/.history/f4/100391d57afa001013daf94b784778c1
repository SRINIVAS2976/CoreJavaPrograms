package hybridInheritance;              // mixture of multiple types of inheritance is known as hybrid inheritance . grand parent and parent single level ,parent and childs is hieracrhical inheritance .  
class GrandParent{
	 String color="brown";
	float height=5.6f;
	void watchingMovies(){
		System.out.println("i watch movies");
	}
	
}

class Parent extends GrandParent{
	 void intelligent() {
		 String color="white";  // this lines will not be overridden ,when it put inside method but outside it overrides this color and height both lines are created only but not executed this . because alaways inhertance looks for parent class
		float height=6.0f;   
		System.out.println(color);// here it overrides
		//System.out.println("iam also intelligent");
		
	}
}
class Child1 extends Parent{
	
	
}
class Child2 extends Parent{
	
}
class Child3 extends Parent{
	
}


public class HybridInheritance {

	public static void main(String[] args) {
		  Child1 c1=new Child1();
		  c1.watchingMovies();
		  System.out.println( c1.color);
		  System.out.println(c1.height);
		 System.out.println(new Child2().color); // one way directly accessing the values of object creation
		 new Child2().watchingMovies();  // we should always directly call the void method without putting inside print statements
		// new Child3().intelligent();
		 System.out.println( new Child2().color);
		 System.out.println(new Child3().color);         // one more way to creeating the object and directly accessing the methods and variables without using reference.
		 System.out.println(new Child3().height);
		 System.out.println(new Child2().height);
		 System.out.println(c1.color);
		 Parent p=new Parent();
		System.out.println( p.color);

	}

}
